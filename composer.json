{
  "name": "davwheat/blog-featured-widget",
  "description": "Show a list of featured blog articles on your forum.",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.2.0",
    "afrux/forum-widgets-core": "^0.1.0",
    "v17development/flarum-blog": ">=0.6.0"
  },
  "authors": [
    {
      "name": "David Wheatley",
      "email": "david@davwheat.dev",
      "role": "Developer"
    }
  ],
  "extra": {
    "flarum-extension": {
      "title": "davwheat Blog Featured Widget",
      "category": "feature",
      "icon": {
        "name": "fas fa-th-large",
        "backgroundColor": "#51c5dd",
        "color": "#000"
      }
    },
    "flarum-cli": {
      "modules": {
        "admin": true,
        "forum": true,
        "js": true,
        "jsCommon": true,
        "css": true,
        "locale": true,
        "gitConf": true,
        "githubActions": true,
        "prettier": true,
        "typescript": true,
        "bundlewatch": false,
        "backendTesting": false,
        "editorConfig": true,
        "styleci": true
      }
    }
  }
}
